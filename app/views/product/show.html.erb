<div class="container">
    <header>
        <h1>Produto</h1>
        <a href="/product">
            <svg height="80px" id="Layer_1" style="enable-background:new 0 0 512 512;" version="1.1" viewBox="0 0 512 512" width="80px" xml:space="preserve" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
              <path d="M443.6,387.1L312.4,255.4l131.5-130c5.4-5.4,5.4-14.2,0-19.6l-37.4-37.6c-2.6-2.6-6.1-4-9.8-4c-3.7,0-7.2,1.5-9.8,4  L256,197.8L124.9,68.3c-2.6-2.6-6.1-4-9.8-4c-3.7,0-7.2,1.5-9.8,4L68,105.9c-5.4,5.4-5.4,14.2,0,19.6l131.5,130L68.4,387.1  c-2.6,2.6-4.1,6.1-4.1,9.8c0,3.7,1.4,7.2,4.1,9.8l37.4,37.6c2.7,2.7,6.2,4.1,9.8,4.1c3.5,0,7.1-1.3,9.8-4.1L256,313.1l130.7,131.1  c2.7,2.7,6.2,4.1,9.8,4.1c3.5,0,7.1-1.3,9.8-4.1l37.4-37.6c2.6-2.6,4.1-6.1,4.1-9.8C447.7,393.2,446.2,389.7,443.6,387.1z"/>
            </svg>
        </a>
    </header>
    <div class="product-container">
        <h2><%= @product.title %></h2>
        <div class="product-image-container">
            <img src="<%= @product.images.first.src %>" class="product-image"/>
        </div>
        
        <div class="vendor-container">
            <h3>Vendido por: </h3>
            <p><%= @product.vendor %>
        </div>

        <div class="product-url">
            <h3>Url do produto</h3>
            <a class="product-page-url" href=<%= @product.product_url.url %>><%= @product.product_url.url %></a>
        </div>

        <div class="date-container">
            <h3>Datas</h3>
            <ul>
                <li>Criado <%= @product.product_created_at.strftime("as %H:%M em %d/%m/%y") %></li>
                <li>Atualizado <%= @product.product_updated_at.strftime("as %H:%M em %d/%m/%y") %></li>
                <li>Publicado <%= @product.product_published_at.strftime("as %H:%M em %d/%m/%y") %></li>
            </ul>
        </div>

        <div class="delete-container">
            <a href="/product/delete/<%= @product.id %>" class="delete-btn"> Apagar Produto </a>
        </div>

        <div class="variants-container">
            <h3>Variações</h3>
            <table>
                <thead>
                    <tr>
                        <th scope="col">Título</th>
                        <th scope="col">Preço</th>
                        <th scope="col">Peso</th>
                    </tr>
                </thead>
                <tbody>
                <% @product.variants.each do |variant| %>
                <tr class="product-row">
                    <td><%= variant.title %></td>
                    <td><%= variant.price %> (<%= variant.price_currency %>)</td>
                    <td><%= variant.weight %> (<%= variant.weight_unit %>)</td>
                </tr>
                <% end %>
                </tbody>
            <table>
        </div>
    </div>
</div>